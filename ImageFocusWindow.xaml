<Window x:Class="EchoOrbit.Controls.ImageFocusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageFocusWindow" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowState="Maximized"
        Topmost="True"
        MouseDown="Grid_MouseDown">
    <Grid Background="#CC000000">
        <!-- The main image is centered -->
        <Image x:Name="FocusedImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <!-- Close button at the top right -->
        <Button x:Name="CloseButton" Content="X" Width="40" Height="40" 
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                Click="CloseButton_Click"
                Background="Transparent" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
        <!-- Previous button at the middle left -->
        <Button x:Name="PreviousButton" Content="&#x276E;" Width="60" Height="60"
                HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"
                Click="PreviousButton_Click"
                Background="Transparent" Foreground="White" FontSize="36" BorderThickness="0"/>
        <!-- Next button at the middle right -->
        <Button x:Name="NextButton" Content="&#x276F;" Width="60" Height="60"
                HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"
                Click="NextButton_Click"
                Background="Transparent" Foreground="White" FontSize="36" BorderThickness="0"/>
    </Grid>
</Window>
