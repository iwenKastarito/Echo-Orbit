<UserControl x:Class="EchoOrbit.Controls.PlaylistControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EchoOrbit.Controls"
             Background="#2E2E2E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Toolbar for playlist actions -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="Add" Click="AddButton_Click" Margin="5"/>
            <Button Content="Remove" Click="RemoveButton_Click" Margin="5"/>
            <Button Content="Share" Click="ShareButton_Click" Margin="5"/>
            <Button Content="Play" Click="PlayButton_Click" Margin="5"/>
        </StackPanel>
        <!-- ListBox to show playlist items -->
        <ListBox x:Name="PlaylistListBox" Grid.Row="1" Margin="10"
             Background="White" Foreground="Black"/>
    </Grid>
</UserControl>
